<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="account.view_invoice_pivot">
            <field name="name">account.invoice.pivot</field>
            <field name="model">account.invoice</field>
            <field name="arch" type="xml">
                <pivot string="Invoices" display_quantity="true">
                    <field name="partner_id"/>
                    <field name="amount_total_signed" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="invoice_form_inherit_desoft" model="ir.ui.view">
            <field name="name">account.invoice.form.inherit.desoft</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <data>
                    <field name="date_invoice" position="before">
                        <field name="folio"/>
                    </field>
                    <field name="date_invoice" position="after">
                        <field name="signed_date"/>
                    </field>
                    <field name="partner_id" position="before">
                        <field name="name_related"/>
                    </field>
                </data>
            </field>
        </record>

        <record id="invoice_tree_inherit_desoft" model="ir.ui.view">
            <field name="name">account.invoice.tree.inherit.desoft</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_tree"/>
            <field name="arch" type="xml">
                <data>
                    <field name="number" position="replace">
                        <field name="name"/>
                        <field name="folio"/>
                    </field>
                </data>
            </field>
        </record>

        <record id="invoice_search_inherit_desoft" model="ir.ui.view">
            <field name="name">account.invoice.search.inherit.desoft</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <data>
                    <field name="number" position="before">
                        <field name="name_related"/>
                    </field>
                </data>
            </field>
        </record>

        <record id="invoice_form_inherit" model="ir.ui.view">
            <field name="name">account.invoice.form.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//notebook/page/field[@name='invoice_line_ids']/tree//field[@name='account_analytic_id']"
                           position="replace">
                        <field name="account_analytic_id" groups="analytic.group_analytic_accounting"
                               domain="[('company_id', '=', parent.company_id),('use_tasks', '=', False),('use_issues', '=', False)]"/>
                    </xpath>
                </data>
            </field>
        </record>


        <!--se agrego esto para que la factura de proveedor tenga el mismo comportamiento que la factura de cliente-->
        <record id="invoice_supplier_form_inherit_desoft" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form.inherit.desoft</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <data>
                    <field name="date_invoice" position="after">
                        <field name="signed_date"/>
                    </field>
                    <field name="date_due" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </field>
                </data>
            </field>
        </record>
    </data>
</openerp>
