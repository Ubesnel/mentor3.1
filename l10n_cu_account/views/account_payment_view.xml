<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_account_payment_tree_inherit" model="ir.ui.view">
            <field name="name">account.payment.tree.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="arch" type="xml">
                <data>
                    <field name="payment_date" position="before">
                        <field name="create_date" required="True"/>
			 		</field>
                </data>
            </field>
        </record>

        <record id="view_account_payment_invoice_form_inherit_payment_desoft" model="ir.ui.view">
                <field name="name">view.account.payment.invoice.form.inherit.payment.desoft</field>
                <field name="model">account.payment</field>
                <field name="inherit_id" ref="account.view_account_payment_invoice_form"/>
                <field name="arch" type="xml">
                    <field name="communication" position="before">
                        <field name="transfer_number" required="True"/>
                    </field>
                </field>
        </record>

        <record id="view_account_payment_form_inherit" model="ir.ui.view">
            <field name="name">account.payment.form.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <data>
    			 	<field name="payment_date" position="before">
                        <field name="transfer_number" required="True"/>
			 		</field>
                    <xpath expr="//sheet//group//group//div" position="after">
                        <label for="residual_amount"/>
                        <div name="amount_div" class="o_row">
                            <field name="residual_amount"/>
                        </div>
                    </xpath>
                    <xpath expr="//sheet//group" position="after">
                        <notebook>
							<page string="Invoices" attrs="{'readonly': [('state', '!=', 'draft')]}">
								<field name="line_ids">
									<tree editable="bottom" create="false">
                                        <field name="name_related"/>
                                        <field name="invoice_id"/>
                                        <field name="residual"/>
										<field name="amount"/>
									</tree>
								</field>
							</page>
						</notebook>
                    </xpath>
		 		</data>
            </field>
        </record>
	</data>
</openerp>
